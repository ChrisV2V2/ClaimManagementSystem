@model LecturerHourlyClaimApp.Models.LoginViewModel

<style>
    /* Base Styles */
    body {
        background-color: #007bff; /* Blue background */
        font-family: 'Arial', sans-serif; /* Modern font */
        color: #333; /* Dark text color for contrast */
        margin: 0; /* Remove default margin */
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full viewport height */
        position: relative; /* Position for background circles */
        flex-direction: column; /* Stack header and login box */
    }

    .header {
        background-color: #ffffff; /* White background for the header */
        padding: 1rem 2rem; /* Padding for the header */
        border-radius: 10px 10px 10px 10px; /* Rounded  corners */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Shadow for depth */
        width: 50%; /* Full width */
        text-align: center; /* Center text alignment */
        position: absolute; /* Position at the top */
        top: 0px; /* Distance from the top */
        z-index: 1; /* Ensure the header is above the background */
    }

        .header h1 {
            font-size: 2rem; /* Font size for header */
            margin: 0; /* Remove default margin */
            color: #007bff; /* Primary color */
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2); /* Subtle shadow */
        }

    .login-box {
        background-color: white; /* White background for the login box */
        padding: 2.5rem; /* Increased padding */
        border-radius: 10px; /* Slightly rounded corners */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Stronger shadow */
        width: 300px; /* Fixed width for the login box */
        text-align: center; /* Center text alignment */
        transition: transform 0.3s; /* Smooth scaling effect */
        position: relative; /* To position the header */
        z-index: 1; /* Ensure the login box is above background */
        margin-top: 100px; /* Space below header */
    }

        .login-box:hover {
            transform: translateY(-5px); /* Slight upward movement on hover */
        }

    h2 {
        font-size: 1.8rem; /* Larger font size for heading */
        margin-bottom: 1rem; /* Space below heading */
    }

    .form-group {
        margin-bottom: 1.5rem; /* Increased space between form elements */
    }

    label {
        display: block; /* Block display for labels */
        margin-bottom: 0.5rem; /* Space below labels */
    }

    input {
        width: 100%; /* Full width for inputs */
        padding: 0.5rem; /* Padding for input fields */
        border: 1px solid #ccc; /* Border for input fields */
        border-radius: 5px; /* Rounded corners for inputs */
        transition: border-color 0.3s; /* Smooth border color change */
    }

        input:focus {
            border-color: #007bff; /* Change border color on focus */
            outline: none; /* Remove outline */
        }

    .btn {
        margin-top: 1rem; /* Space above the button */
        width: 100%; /* Full width for buttons */
        padding: 0.75rem; /* Padding for buttons */
        border: none; /* Remove default border */
        border-radius: 5px; /* Rounded corners for buttons */
        transition: background-color 0.3s, transform 0.3s; /* Smooth transition */
    }

    .btn-primary {
        background-color: #007bff; /* Primary button color */
        color: white; /* Text color */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker shade on hover */
            transform: translateY(-2px); /* Slight upward movement on hover */
        }

    .text-danger {
        color: #dc3545; /* Danger text color */
        margin-top: 1rem; /* Space above the error message */
    }

    /* Animated Background */
    .area {
        background: #007bff;
        background: -webkit-linear-gradient(to left, #8f94fb, #4e54c8);
        position: absolute;
        width: 100%;
        height: 100vh;
        top: 0;
        left: 0;
        z-index: 0; /* Ensure it sits behind the login form */
        overflow: hidden;
    }

    .circles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

        .circles li {
            position: absolute;
            list-style: none;
            display: block;
            width: 20px;
            height: 20px;
            background: rgba(255, 255, 255, 0.2);
            bottom: -150px;
            animation: animate 25s linear infinite;
        }

            .circles li:nth-child(1) {
                left: 25%;
                width: 80px;
                height: 80px;
                animation-delay: 0s;
            }

            .circles li:nth-child(2) {
                left: 10%;
                width: 20px;
                height: 20px;
                animation-delay: 2s;
                animation-duration: 12s;
            }

            .circles li:nth-child(3) {
                left: 70%;
                width: 20px;
                height: 20px;
                animation-delay: 4s;
            }

            .circles li:nth-child(4) {
                left: 40%;
                width: 60px;
                height: 60px;
                animation-delay: 0s;
            }

    @@keyframes animate {
        0% {
            transform: translateY(0);
        }

        100% {
            transform: translateY(-1000px) rotate(360deg);
        }
    }
</style>

<div class="area">
    <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
</div>

<div class="login-container">
    <div class="header">
        <h1>Lecturer Hourly Claim System</h1> <!-- App name header -->
    </div>

    <div class="login-box">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>

        @if (ViewData.ModelState.Count > 0)
        {
            <div class="text-danger">
                Invalid username or password
            </div>
        }
    </div>
</div>
